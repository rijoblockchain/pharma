{
  "name": "pharma",
  "version": "1.0.0",
  "description": "Pharma Supply Chain",
  "engines": {
    "node": ">=12",
    "npm": ">=5"
  },
  "main": "app.js",
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "nyc mocha --recursive",
    "start": "nodemon app"
  },
  "engineStrict": true,
  "author": "Rijo Thomas",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "fabric-ca-client": "^2.2.4",
    "fabric-network": "^2.2.4"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "eslint": "^5.9.0",
    "mocha": "^5.2.0",
    "nodemon": "^2.0.7",
    "nyc": "^14.1.1",
    "sinon": "^7.1.1",
    "sinon-chai": "^3.3.0"
  },
  "nyc": {
    "exclude": [
      "coverage/**",
      "test/**"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "all": true,
    "check-coverage": true,
    "statements": 100,
    "branches": 100,
    "functions": 100,
    "lines": 100
  }
}
